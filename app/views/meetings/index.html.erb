


<div class="row">
      <!-- Sidebar Widgets Column -->
      <div class="col-lg-8">
      <h1>Calendar</h1>
      <hr>
      <%= month_calendar events: @meetings do |date, meetings| %>
        <%= date.day %>

        <% meetings.each do |meeting| %>
          <div>
            <%= link_to "#{meeting.title} - #{meeting.start_time.strftime("%I:%M %P")}", meeting %>
          </div>
        <% end %>
      <% end %>
      <br>
      </div>
      <div class="col-md-4">
         <!-- Side Widget -->
        <div class="card my-4">
          <h5 class="card-header">Upcoming Events</h5>
          <div class="card-body">
              <% @meetings.upcoming.limit(5).each do |meeting| %>
                <div>
                  <%= link_to "#{meeting.title} - #{meeting.start_time.strftime("%B %d, %Y - %I:%M:%P")}", meeting %>
                </div>
              <% end %>
          </div>
        </div>
        <div class="card my-4">
          <h5 class="card-header">Filters</h5>
          <div class="card-body">
              <%= button_to 'All Events', meetings_path, :method => :get %>
              <p><%= button_to 'Your Events', filtered_meetings_path(:your_meetings), :method => :get %></p>
          </div>
        </div>
      </div>
    </div>
<hr>







