<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Adventure</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <link href="https://blackrockdigital.github.io/startbootstrap-resume/vendor/fontawesome-free/css/all.min.css" rel="stylesheet">

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

  <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
      <div class="container">
      <a><%= link_to image_tag('sword.png'), root_url, class: "navbar-brand"%></a>
          <ul>
            <li class="nav-link active">
              <% if current_user %>
                <%= link_to current_user do %>
                  <i class="fas fa-dungeon", style="color:#FFFFFF;"> <%=current_user.name%></i>
                <% end %><br>
                <%= link_to session_path, method: :delete do %>
                  <i class="fas fa-dungeon", style="color:#FFFFFF;"> Sign Out</i>
                <% end %><br>
                <%= link_to users_path do %>
                  <i class="fas fa-dungeon", style="color:#FFFFFF;"> Users</i>
                <% end %><br>
                <%= link_to meetings_path do %>
                  <i class="fas fa-dungeon", style="color:#FFFFFF;"> Calendar</i>
                <% end %>
              <% else %>
                <%= link_to new_user_path do %>
                  <i class="fas fa-dungeon", style="color:#FFFFFF;"> Sign Up</i>
                <% end %><br>
                <%= link_to new_session_path do %>
                  <i class="fas fa-dungeon", style="color:#FFFFFF;"> Sign In</i>
                <% end %><br>
              <% end %>
            </li>
          </ul>
      </div>
    </nav>
    <% if flash[:notice] %>
      <p class="flash notice">
        <%= flash[:notice] %>
      </p>
    <% end %>
    <% if flash[:alert] %>
      <p class="flash alert">
        <%= flash[:alert] %>
      </p>
    <% end %>

  </head>

  <body style="padding-top: 200px;">

    <%= yield %>
  </body>

    <!-- Footer -->
    <footer class="bg-dark">
      <div class="container">
        <p class="m-0 text-center text-white">~Alea iacta est~</p>
      </div>
      <!-- /.container -->
    </footer>

</html>
